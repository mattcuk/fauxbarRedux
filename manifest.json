{
    "name": "TBD",
    "description": "Search your entire browser history from the Omnibar, not just what the browser normally surfaces. Type 'f' followed by a tab or space to activate this feature, then type what you want to search for. Inspired by the Fauxbar extension.",
    "version": "1.0.0",
    "manifest_version": 3,
    "minimum_chrome_version": "120",
    "icons": {
        "16": "/img/logo16.png",
        "19": "/img/logo19.png",
        "48": "/img/logo48.png",
        "128": "/img/logo128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup_info.html",
        "default_icon": {
            "16": "/img/logo16.png",
            "19": "/img/logo19.png",
            "48": "/img/logo48.png",
            "128": "/img/logo128.png"
        }
    },
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "activeTab",
        "bookmarks",
        "history"
    ],
    "omnibox": {
        "keyword": "f"
    }
}
